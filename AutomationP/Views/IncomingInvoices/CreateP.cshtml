@model IncomingInvoice
<div class="container rigth_panel_for_somthing incoming_invoice_create">
    <div class="rigth_panel_topLine">
        <button type="button" class="exit_button close"> </button>
    </div>
    <div class="right_panel_content">
        <form>
            <div class="row top_inputs_in_right_panel">
                <div class="one_div_on_right_panel col-sm-6">
                    <label asp-for="Date">Номер</label>
                    <input asp-for="Date" type="date" class="in_right_panel" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="one_div_on_right_panel col-sm-6">
                    <label asp-for="StorageId">Склад</label>
                    <select asp-for="StorageId" class="in_right_panel" asp-items="ViewBag.Storages"></select>
                    <span asp-validation-for="Storage" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <p>Товари по нікладній</p>
            </div>
            @await Html.PartialAsync("ProductIn", ViewBag.Products as IEnumerable<Library.Models.Invoice_Product>)
        </form>
    </div>
</div>


<div class="rigth_panel2_for_somthing">
    <div class="div-cash container">
        <div class="row">
            @if (ViewBag.ParentCatName != null)
            {
                <div class="col-sm-12 cash-parent-categ blue">

                    <a class="" href="/IncomingInvoices/Index/@ViewBag.ParentCatId" id="cash-href">
                        <div class="product-wrapper"> @ViewBag.ParentCatName </div>
                    </a>
                </div>
            }
            @foreach (var el in ViewBag.categ)
            {

                <div class="col-sm-3 cash-bacground">
                    <a class="" href="/IncomingInvoices/Index/@el.Id" id="cash-href">
                        <div class="product-wrapper"> @el.Name </div>

                    </a>
                </div>

            }
            @foreach (var el in ViewBag.prod)
            {

                <div class="col-sm-3 cash-product">
                    <a class="" href="/IncomingInvoices/AddToCart/@el.Id" id="cash-href-product">
                        <div class="product-wrapper"> @el.Name </div>

                    </a>
                </div>

            }
        </div>
        <div>

        </div>
    </div>
</div>