@model IEnumerable<Role>
@if (Model != null)
{
<div class="min-width-right-panel">
    @{
        string capas = "";
        for (int i = 0; i < Model.ToList().Capacity; i++)
        {
            capas += "0";
        }
        var rolelist = Model.ToList();

        }
    <input name="textboxRoleForCheck" id="textboxRoleForCheck" type="text" readonly value="@capas" hidden />
    <div class="row">
        @for (int i = 0; i < Model.ToList().Capacity; i++)
        {
            <div class="margin-10">
                <input type="checkbox" id="RoleCheckBox_@i" onclick="CheckBoxClicked('textboxRoleForCheck','@i',this)"/>
                <span>@rolelist[i].Name</span>
            </div>
        }
    </div>
</div>
        }