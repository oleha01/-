@model IEnumerable<PointOfSale>
@if (Model != null)
{
    <div class="min-width-right-panel">
        @{
            string capas = "";
            for (int i = 0; i < Model.ToList().Capacity; i++)
            {
                capas += "0";
            }
            var pointlist = Model.ToList();

        }
        <input name="textboxPointForCheck" id="textboxPointForCheck" type="text" readonly value="@capas" hidden />
        <div class="row">
            @for (int i = 0; i < Model.ToList().Capacity; i++)
            {
                <div class="margin-10">
                    <input type="checkbox" id="PointCheckBox_@i" onclick="CheckBoxClicked('textboxPointForCheck','@i',this)" />
                    <span>@pointlist[i].Name</span>
                </div>
            }
        </div>
    </div>
}